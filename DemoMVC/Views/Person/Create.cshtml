@model DemoMVC.Models.Person
<form asp-action="Upload" asp-controller="Person" method='post' enctype='multipart/form-data'
  class='border p-2 mb-2 w-25'>
  <div asp-validation-summary="None" class='text-danger'></div>
  <div class="d-flex flex-column align-items-start">
    <label class='mb-2'>Import data from Excel</label>
    <input class='border p-2' id='FileInput' type="file" name="file">
    <input type='submit' class='btn btn-primary mt-2 w-100' value='Upload' />
  </div>
</form>
<form method='post'>
  <div class="container border p-4">
    <h2 class='mb-4'>Create Person</h2>
    <div class="form-group">
      <label asp-for="FullName">Full Name</label>
      <input asp-for="FullName" class='form-control fs-4'>
    </div>
    <div class="form-group">
      <label asp-for="Address">Address</label>
      <input asp-for='Address' class='form-control fs-4'>
    </div>
    <div class="form-group">
      <label asp-for="Weight">Weight</label>
      <input asp-for='Weight' class='form-control fs-4'>
    </div>
    <div class="form-group">
      <label asp-for="Height">Height</label>
      <input asp-for='Height' class='form-control fs-4'>
    </div>
    <div class="row mt-3">
      <button type="submit" class="btn btn-primary mt-2">Create</button>
      <a asp-action="Index">Back to list</a>
    </div>
  </div>
</form>